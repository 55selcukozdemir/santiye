<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_warehome_request_blok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blok" />

        <TextView
            android:id="@+id/list_item_warehome_request_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_warehome_request_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün" />

        <TextView
            android:id="@+id/list_item_warehome_request_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miktar" />
    </LinearLayout>

    <Button
        android:id="@+id/list_item_warehome_button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.5"
        android:text="onay" />

    <Button
        android:id="@+id/list_item_warehome_button_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1.5"
        android:text="red" />
</LinearLayout>